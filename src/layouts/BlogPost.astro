---
const { title, description, pubDate, updatedDate, keywords } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
const formattedUpdate = updatedDate ? new Date(updatedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : null;
---

<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{title} — Draft</title>
<meta name="description" content={description}>
<meta property="og:title" content={`${title} — Draft`}>
<meta property="og:description" content={description}>
<meta property="og:url" content={Astro.url.href}>
<meta property="og:type" content="article">
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content={`${title} — Draft`}>
<meta name="twitter:description" content={description}>
{keywords && <meta name="keywords" content={keywords.join(', ')}>}
<link rel="icon" type="image/svg+xml" href="/favicon.svg">
<link rel="canonical" href={Astro.url.href}>
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "datePublished": pubDate,
  "dateModified": updatedDate || pubDate,
  "publisher": {
    "@type": "Organization",
    "name": "Draft",
    "url": "https://draftrev.com"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": Astro.url.href
  }
})} />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=JetBrains+Mono:wght@400;500;700&family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<style>
*, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  --bg: #FAF7F2;
  --bg-elevated: #F0EBE3;
  --bg-card: #FFFFFF;
  --border: #E0D8CC;
  --border-hover: #C8BEAE;
  --text-muted: #9A9185;
  --text-secondary: #6B6158;
  --text: #3D352D;
  --text-bright: #1A1510;
  --accent: #E8553A;
  --accent-hover: #D44425;
  --font-display: 'Instrument Serif', Georgia, serif;
  --font-body: 'Outfit', -apple-system, sans-serif;
  --font-mono: 'JetBrains Mono', monospace;
  --ease-out: cubic-bezier(0.16, 1, 0.3, 1);
  --container: 760px;
}

html { scroll-behavior: smooth; }

body {
  font-family: var(--font-body);
  background: var(--bg);
  color: var(--text);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

::selection { background: rgba(232, 85, 58, 0.15); color: var(--text-bright); }
::-webkit-scrollbar { width: 4px; }
::-webkit-scrollbar-track { background: var(--bg-elevated); }
::-webkit-scrollbar-thumb { background: var(--border); border-radius: 2px; }
a { color: var(--accent); text-decoration: none; }
a:hover { text-decoration: underline; }

/* ── NAV ── */
nav {
  position: fixed; top: 0; left: 0; right: 0; z-index: 100;
  padding: 1.25rem 0;
  background: rgba(250, 247, 242, 0.9);
  backdrop-filter: blur(24px) saturate(1.4);
  -webkit-backdrop-filter: blur(24px) saturate(1.4);
  border-bottom: 1px solid var(--border);
}
nav .container { max-width: 1140px; margin: 0 auto; padding: 0 2rem; display: flex; align-items: center; justify-content: space-between; }
.nav-logo {
  font-family: var(--font-display);
  font-size: 1.35rem; color: var(--text-bright);
  font-style: italic;
  letter-spacing: -0.01em;
  text-decoration: none;
}
.nav-logo:hover { text-decoration: none; }
.nav-links { display: flex; align-items: center; gap: 2.5rem; }
.nav-links a {
  font-size: 0.82rem; font-weight: 400;
  color: var(--text-secondary);
  text-decoration: none;
  transition: color 0.3s ease;
}
.nav-links a:hover { color: var(--text-bright); text-decoration: none; }
.nav-cta {
  font-size: 0.78rem !important; font-weight: 600 !important;
  color: #FFFFFF !important;
  background: var(--accent);
  padding: 0.5rem 1.2rem;
  border-radius: 100px;
  transition: all 0.35s var(--ease-out) !important;
}
.nav-cta:hover {
  background: var(--accent-hover);
  transform: translateY(-1px);
  box-shadow: 0 4px 20px rgba(232, 85, 58, 0.25);
  text-decoration: none !important;
}

/* ── ARTICLE ── */
.container { max-width: var(--container); margin: 0 auto; padding: 0 2rem; }

.article-header {
  padding: 8rem 0 3rem;
  border-bottom: 1px solid var(--border);
  margin-bottom: 3rem;
}
.article-back {
  font-family: var(--font-mono);
  font-size: 0.72rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.15em;
  color: var(--accent);
  margin-bottom: 2rem;
  display: inline-block;
}
.article-title {
  font-family: var(--font-display);
  font-size: clamp(2.2rem, 4.5vw, 3rem);
  line-height: 1.1;
  color: var(--text-bright);
  margin-bottom: 1rem;
}
.article-meta {
  font-size: 0.82rem;
  color: var(--text-muted);
}
.article-meta time { color: var(--text-secondary); }

/* ── PROSE ── */
.prose {
  padding-bottom: 5rem;
}
.prose h2 {
  font-family: var(--font-display);
  font-size: 1.8rem;
  line-height: 1.15;
  color: var(--text-bright);
  margin-top: 3rem;
  margin-bottom: 1rem;
}
.prose h3 {
  font-family: var(--font-display);
  font-size: 1.35rem;
  line-height: 1.2;
  color: var(--text-bright);
  margin-top: 2.5rem;
  margin-bottom: 0.75rem;
}
.prose p {
  font-size: 1.05rem;
  line-height: 1.85;
  color: var(--text);
  font-weight: 300;
  margin-bottom: 1.5rem;
}
.prose ul, .prose ol {
  margin-bottom: 1.5rem;
  padding-left: 1.5rem;
}
.prose li {
  font-size: 1.05rem;
  line-height: 1.85;
  color: var(--text);
  font-weight: 300;
  margin-bottom: 0.5rem;
}
.prose strong {
  font-weight: 600;
  color: var(--text-bright);
}
.prose em {
  font-family: var(--font-display);
  color: var(--accent);
  font-size: 1.05em;
}
.prose blockquote {
  border-left: 3px solid var(--accent);
  padding: 1rem 1.5rem;
  margin: 2rem 0;
  background: rgba(232, 85, 58, 0.03);
  border-radius: 0 12px 12px 0;
}
.prose blockquote p {
  font-style: italic;
  color: var(--text-secondary);
  margin-bottom: 0;
}
.prose hr {
  border: none;
  border-top: 1px solid var(--border);
  margin: 3rem 0;
}
.prose code {
  font-family: var(--font-mono);
  font-size: 0.85em;
  background: var(--bg-elevated);
  padding: 0.15em 0.4em;
  border-radius: 4px;
  color: var(--accent);
}

/* ── CTA BLOCK ── */
.article-cta {
  background: var(--bg-card);
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 2.5rem;
  text-align: center;
  margin: 3rem 0 5rem;
  position: relative;
  overflow: hidden;
}
.article-cta::before {
  content: '';
  position: absolute;
  top: -1px; left: 0; right: 0;
  height: 1px;
  background: linear-gradient(90deg, transparent, var(--accent), transparent);
  opacity: 0.4;
}
.article-cta h3 {
  font-family: var(--font-display);
  font-size: 1.5rem;
  color: var(--text-bright);
  margin-bottom: 0.5rem;
}
.article-cta p {
  font-size: 0.95rem;
  color: var(--text-secondary);
  font-weight: 300;
  margin-bottom: 1.5rem;
}
.btn-primary {
  display: inline-flex; align-items: center; gap: 0.5rem;
  font-family: var(--font-body);
  font-size: 0.9rem; font-weight: 500;
  padding: 0.9rem 1.85rem;
  border-radius: 100px;
  border: none;
  background: var(--accent);
  color: #FFFFFF;
  text-decoration: none;
  transition: all 0.4s var(--ease-out);
}
.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 32px rgba(232, 85, 58, 0.25), 0 2px 8px rgba(232, 85, 58, 0.15);
  text-decoration: none;
}

/* ── FOOTER ── */
footer {
  border-top: 1px solid var(--border);
  padding: 3rem 0 2rem;
}
footer .container { max-width: 1140px; }
.footer-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footer-brand {
  font-family: var(--font-display);
  font-size: 1.15rem;
  color: var(--text-bright);
}
.footer-copy { font-size: 0.75rem; color: var(--text-muted); }

/* ── RESPONSIVE ── */
@media (max-width: 768px) {
  .article-header { padding: 7rem 0 2rem; }
  .article-title { font-size: 2rem; }
  .nav-links a:not(.nav-cta) { display: none; }
}
@media (max-width: 480px) {
  .container { padding: 0 1.25rem; }
  .article-title { font-size: 1.75rem; }
}
</style>
</head>
<body>

<nav>
  <div class="container">
    <a href="/" class="nav-logo">Draft</a>
    <div class="nav-links">
      <a href="/blog">Blog</a>
      <a href="/#results">Results</a>
      <a href="/#process">How it works</a>
      <a href="https://calendly.com/colby-draftrev/30min" class="nav-cta">Book a call</a>
    </div>
  </div>
</nav>

<article>
  <div class="container">
    <header class="article-header">
      <a href="/blog" class="article-back">&larr; Back to blog</a>
      <h1 class="article-title">{title}</h1>
      <div class="article-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {formattedUpdate && <span> &middot; Updated {formattedUpdate}</span>}
      </div>
    </header>

    <div class="prose">
      <slot />
    </div>

    <div class="article-cta">
      <h3>Want posts that drive pipeline like this?</h3>
      <p>Book a 30-minute call to see if Draft is the right fit for your LinkedIn.</p>
      <a href="https://calendly.com/colby-draftrev/30min" class="btn-primary">Book a pipeline call &rarr;</a>
    </div>
  </div>
</article>

<footer>
  <div class="container">
    <div class="footer-inner">
      <span class="footer-brand">Draft</span>
      <span class="footer-copy">&copy; 2026 Draft. Engineered for pipeline.</span>
    </div>
  </div>
</footer>

</body>
</html>
