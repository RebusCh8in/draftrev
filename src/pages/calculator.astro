<script>
(function() {
  // Nav
  const nav = document.querySelector('nav');
  const toggle = document.querySelector('.nav-toggle');
  const links = document.querySelector('.nav-links');
  window.addEventListener('scroll', () => { nav.classList.toggle('scrolled', window.scrollY > 40); });
  if (toggle && links) toggle.addEventListener('click', () => links.classList.toggle('open'));

  // Elements
  var acvSlider = document.getElementById('acv');
  var closeSlider = document.getElementById('close-rate');
  var acvDisplay = document.getElementById('acv-display');
  var closeDisplay = document.getElementById('close-rate-display');
  var annualRevEl = document.getElementById('annual-revenue');
  var monthlyPipeEl = document.getElementById('monthly-pipeline');
  var monthlyRevEl = document.getElementById('monthly-revenue');
  // Constants
  var DRAFT_DEMOS = 20;
  var OPP_RATE = 0.50;

  // Format
  function fmt(val) { return '$' + Math.round(val).toLocaleString('en-US'); }

  // Animate
  var anims = new Map();
  function anim(el, target, duration) {
    duration = duration || 450;
    if (anims.has(el)) cancelAnimationFrame(anims.get(el));
    var start = parseFloat(el.dataset.current) || 0;
    var t0 = performance.now();
    function tick(now) {
      var p = Math.min((now - t0) / duration, 1);
      var e = 1 - Math.pow(1 - p, 3);
      var v = start + (target - start) * e;
      el.dataset.current = v;
      el.textContent = fmt(v);
      if (p < 1) anims.set(el, requestAnimationFrame(tick));
      else anims.delete(el);
    }
    anims.set(el, requestAnimationFrame(tick));
  }

  // Slider fill
  function fill(s) {
    var pct = ((s.value - s.min) / (s.max - s.min)) * 100;
    s.style.setProperty('--fill', pct + '%');
  }

  // Calculate
  function calc() {
    var acv = parseInt(acvSlider.value);
    var cr = parseInt(closeSlider.value) / 100;

    acvDisplay.textContent = fmt(acv);
    closeDisplay.textContent = closeSlider.value + '%';
    fill(acvSlider); fill(closeSlider);

    // Draft: 20 demos → 50% become opps → pipeline = opps × ACV
    // Revenue = opps × close rate × ACV
    var opps = DRAFT_DEMOS * OPP_RATE;
    var monthPipe = opps * acv;
    var monthRev = opps * cr * acv;
    var annualRev = monthRev * 12;
    anim(annualRevEl, annualRev, 550);
    anim(monthlyPipeEl, monthPipe, 350);
    anim(monthlyRevEl, monthRev, 350);
  }

  [acvSlider, closeSlider].forEach(function(s) {
    s.addEventListener('input', calc);
    fill(s);
  });

  calc();
})();
</script>

