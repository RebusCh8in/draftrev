  border-radius: 24px;
  padding: 3.5rem;
  box-shadow: 0 4px 40px rgba(0, 0, 0, 0.04);
}
.calc-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3.5rem;
